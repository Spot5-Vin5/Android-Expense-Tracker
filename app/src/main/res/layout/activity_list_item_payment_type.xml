<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_payment_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Category Name TextView -->
    <TextView
        android:id="@+id/paymentTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Type Name"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/editPayButton"
        android:ellipsize="end"
        android:singleLine="true" />


    <!-- Edit Button -->
    <ImageButton
        android:id="@+id/editPayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_toStartOf="@+id/deletePayButton"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/deletePayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true" />
</RelativeLayout>
